{
  "permissions": {
    "allow": [
      "Bash(just:*)",
      "Bash(make:*)",
      "Bash(uv:*)",
      "Bash(rake:*)",
      "Bash(mv:*)",
      "Bash(mkdir:*)",
      "Bash(find:*)",
      "Bash(ls:*)",
      "Bash(grep:*)",
      "Bash(rm:*)",
      "Bash(bundle exec:*)",
      "Read(~/.codex/AGENTS.md)"
    ],
    "deny": [
      "Read(**/*.env)",
      "Read(**/.env)",
      "Read(**/*.key)",
      "Read(**/*.enc)"
    ]
  },
  "model": "opus",
  "alwaysThinkingEnabled": true,
  "hooks": {
    "Notification": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "terminal-notifier -message 'Claude Code needs your attention' -title 'Claude Code' -sound 'default'"
          }
        ]
      }
    ]
  }
}
