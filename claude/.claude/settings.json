{
  "permissions": {
    "allow": [
      "Bash(just:*)",
      "Bash(make:*)",
      "Bash(uv:*)",
      "Bash(rake:*)",
      "Bash(mv:*)",
      "Bash(mkdir:*)",
      "Bash(find:*)",
      "Bash(ls:*)",
      "Bash(grep:*)",
      "Bash(rm:*)",
      "Bash(bundle exec:*)",
      "Read(~/.codex/AGENTS.md)"
    ],
    "deny": [
      "Read(**/*.env)",
      "Read(**/.env)",
      "Read(**/*.key)",
      "Read(**/*.enc)"
    ]
  },
  "alwaysThinkingEnabled": true,
  "model": "opus"
}
