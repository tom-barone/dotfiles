{
  "permissions": {
    "allow": [
      "Bash(bundle:*)",
      "Bash(cargo:*)",
      "Bash(duckdb:*)",
      "Bash(file:*)",
      "Bash(find:*)",
      "Bash(git ls-remote:*)",
      "Bash(grep:*)",
      "Bash(just:*)",
      "Bash(ls:*)",
      "Bash(make:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(rake:*)",
      "Bash(rm:*)",
      "Bash(tree:*)",
      "Bash(uv:*)",
      "Read(~/.codex/AGENTS.md)",
      "WebFetch(domain:crates.io)",
      "WebFetch(domain:docs.rs)",
      "WebFetch(domain:duckdb.org)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "WebSearch"
    ],
    "deny": [
      "Read(**/*.env)",
      "Read(**/.env)",
      "Read(**/*.key)",
      "Read(**/*.enc)"
    ]
  },
  "model": "opus",
  "alwaysThinkingEnabled": true,
  "hooks": {
    "Notification": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "terminal-notifier -message 'Claude Code needs your attention' -title 'Claude Code' -sound 'default'"
          }
        ]
      }
    ]
  }
}
